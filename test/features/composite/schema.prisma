datasource db {
  provider = "sqlite"
  url      = env("__REPLACE__")
}

generator db {
  provider          = "go run github.com/steebchen/prisma-client-go"
  output            = "."
  disableGoBinaries = true
  package           = "composite"
}

model User {
  firstName  String
  middleName String
  lastName   String

  somethingId    String?
  anotherIdStuff String?

  apiStuff APIStuff? @relation(fields: [somethingId], references: [id])

  @@id([firstName, lastName])
  @@unique([firstName, middleName, lastName])
  @@unique([somethingId, anotherIdStuff])
  @@unique([anotherIdStuff, somethingId], name: "anotherIDStuffSomethingID")
}

// TODO put this somewhere else
model APIStuff {
  id String @id @default(uuid())

  somethingId String?
  anotherID   String?
  idSome      String?
  IPSome      String?

  users User[]
}
