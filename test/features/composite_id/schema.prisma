datasource db {
  provider = "postgresql"
  url      = env("__REPLACE__")
}

generator db {
  provider          = "go run github.com/steebchen/prisma-client-go"
  output            = "."
  disableGoBinaries = true
  package           = "db"
}

model RepositoryOrganization {
  platformId   String
  platformKind String

  name String

  repositories Repository[]

  @@id(name: "repositoryOrganizationId", [platformKind, platformId])
  @@map("repository_organizations")
}

model Repository {
  platformId   String
  platformKind String

  orgId String?                 @map("org_id")
  org   RepositoryOrganization? @relation(fields: [platformKind, orgId], references: [platformKind, platformId])

  @@id(name: "repositoryId", [platformKind, platformId])
  @@map("repositories")
}
