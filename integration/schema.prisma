datasource db {
	provider = "postgresql"
	url      = "postgresql://postgres:mysecretpassword@localhost:5432/db?schema=public"
}

generator photon {
	provider = "../photongo"
	output   = "./photon/photon_gen.go"
	package  = "photon"
}

model User {
	id        String   @default(cuid()) @id @unique
	createdAt DateTime @default(now())
	email     String   @unique
	name      String?
	age       Int?
	posts     Post[]
}

model Post {
	id        String   @default(cuid()) @id @unique
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
	published Boolean
	title     String
	content   String?
	author    User
}
