datasource db {
	provider = "sqlite"
	url      = "file:dev.sqlite"
}

generator photon {
	provider = "../../../photongo"
	output = "./photon_gen.go"
	package = "relations"
}

model User {
	id       String  @id @default(cuid())
	email    String  @unique
	username String
	name     String?
	posts    Post[]
	comments Comment[]
}

model Post {
	id       String  @id @default(cuid())
	title    String
	content  String?
	author   User
	comments Comment[]
}

model Comment {
	id        String  @id @default(cuid())
	content   String
	by        User
	post      Post
}
