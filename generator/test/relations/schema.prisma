datasource db {
	provider = "sqlite"
	url      = "file:dev.sqlite"
}

generator photon {
	provider = "../../../photongo"
	output = "./photon_gen.go"
	package = "relations"
}

model User {
	id       String  @id @default(cuid())
	email    String  @unique
	username String
	name     String?
	posts    Post[]
}

model Post {
	id      String  @id @default(cuid())
	email   String  @unique
	title   String
	content String?
	user    User
}

