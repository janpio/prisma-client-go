datasource db {
	provider = "sqlite"
	url      = "file:dev.sqlite"
}

generator db {
	provider = "../../../prisma-client-go"
	output = "./db_gen.go"
	package = "types"
}

model User {
	id        String   @id @default(cuid())
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
	str       String
	strOpt    String?
	int       Int
	intOpt    Int?
	float     Float
	floatOpt  Float?
	bool      Boolean
	boolOpt   Boolean?
	date      DateTime
	dateOpt   DateTime?
	role      Role
	roleOpt   Role?

	chan      String?
	map       String?
	continue  String?
	break     String?
	const     String?
	var       String?
	for       String?
	range     String?
	return    String?
	switch    String?
	struct    String?
	type      String?
	go        String?
	interface String?
	defer     String?
}

enum Role {
	User
	Moderator
	Admin
}
